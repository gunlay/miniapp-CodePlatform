.container {
  padding: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
}

.profile-container {
  min-height: 100vh;
  background: #F5F7FA;
}

.user-header {
  background: linear-gradient(180deg, #87CEEB 0%, #E1F5FE 100%);
  padding: 40rpx 30rpx;
  border-radius: 0 0 30rpx 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 28rpx;
  color: #666;
}

.stats-bar {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 20rpx 0;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.order-types {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

.order-type-item {
  text-align: center;
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.type-text {
  font-size: 24rpx;
  color: #333;
}

.menu-list {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
} 