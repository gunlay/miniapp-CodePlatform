.role-container {
  min-height: 100vh;
  padding: 0 30rpx;
  padding-top: 120rpx;
  transition: background-color 0.3s;
}

.role-container.programmer-bg {
  background: #E8F5F0;
}

.role-container.student-bg {
  background: #E1F5FE;
}

.role-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
}

.role-list {
  margin-top: 40rpx;
}

.role-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s;
}

.role-content {
  display: flex;
  align-items: flex-start;
}

.role-icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.role-info {
  flex: 1;
}

.role-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.role-features {
  color: #666;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.feature-icon {
  margin-right: 12rpx;
}

.role-card.selected {
  border: 2rpx solid transparent;
}

.role-card.selected.programmer {
  background: #E8F5F0;
  border-color: #4CD964;
}

.role-card.selected.student {
  background: #E1F5FE;
  border-color: #2196F3;
}

.run-button {
  width: 240rpx;
  height: 80rpx;
  background: #CCCCCC;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx auto;
}

.run-button.active.programmer {
  background: #4CD964;
}

.run-button.active.student {
  background: #2196F3;
}

.run-text {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
}

/* 移除返回按钮和更多按钮的样式 */
.back-icon, .more-icon {
  display: none;
} 