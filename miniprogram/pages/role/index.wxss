.role-container {
  min-height: 100vh;
  padding: 40rpx;
  background: #fff;
  transition: background-color 0.3s;
}

.role-container.programmer-bg {
  background: #E8F5F0;
}

.role-container.student-bg {
  background: #E1F5FE;
}

.role-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
}

.role-list {
  margin-top: 60rpx;
}

.role-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
  transition: all 0.3s;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.role-icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.role-content {
  flex: 1;
}

.role-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.role-features {
  color: #666;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.feature-icon {
  margin-right: 12rpx;
}

/* 程序员卡片样式 */
.role-card.programmer.selected {
  background: #4CD964;
}

.role-card.programmer.selected .role-name,
.role-card.programmer.selected .feature-item {
  color: #fff;
}

/* 学生卡片样式 */
.role-card.student.selected {
  background: #2196F3;
}

.role-card.student.selected .role-name,
.role-card.student.selected .feature-item {
  color: #fff;
}

.run-button {
  width: 240rpx;
  height: 80rpx;
  background: #CCCCCC;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx auto;
  transition: all 0.3s;
}

.run-button.active.programmer {
  background: #4CD964;
}

.run-button.active.student {
  background: #2196F3;
}

.run-text {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
}

/* 移除返回按钮和更多按钮的样式 */
.back-icon, .more-icon {
  display: none;
} 